<Page x:Class="WpfApp1.View.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="600"
      Title="Menu">

    <StackPanel>
        <StackPanel Background="LightGray" Height="330" Width="300">
            <Border Margin="6" BorderBrush="DarkGray" BorderThickness="2,2,0,0" ClipToBounds="True" >
                <Border BorderBrush="White" BorderThickness="0 0 2 2">
                    <TextBlock TextWrapping="Wrap" Text="С А П Ё Р" HorizontalAlignment="Center" FontFamily="Arial Black" Foreground="#FF373737"/>
                </Border>
            </Border>
            <Border Margin="6 2 6 6" BorderBrush="DarkGray" BorderThickness="3,3,0,0" ClipToBounds="True" Height="290" >
                <Border BorderBrush="White" BorderThickness="0 0 3 3">
                    <Button Name="play" Click="play_Click" Content="Играть" Height="48" Margin="0,52,0,0" VerticalAlignment="Top" Width="170" FontFamily="Bahnschrift" FontSize="18" Foreground="#FF202020" Cursor="Hand"/>
                </Border>
            </Border>
        </StackPanel>
    </StackPanel>
</Page>